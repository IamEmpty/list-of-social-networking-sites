.sites-list__item
  overflow hidden
  border-top 3px solid #ddd
  background #F0F1EE
  padding 20px 0
  &:hover
    border-top 3px solid #F96863
    & + .sites-list__item
      border-top 3px solid #F96863
  &:first-child
    border-top none

.sites-list__row
  margin 0 -10px
  overflow hidden

for num in (1..12)
  .sites-list__col-{num}
    width (100% / 12 * num)
    min-height 1px
    float left
    box-sizing border-box
    padding 0 10px

.sites-list-item__heading
  text-decoration none
  margin 0
  font-size 18px
  overflow hidden
  color #333332

.sites-list-item__link
  color #333332
  text-decoration none
  &:hover
    text-decoration underline

.sites-list-item__icon
  float left
  margin 2px 0 0 0

.sites-list-item__screenshot-wrapper
  width 100%
  height 250px
  overflow hidden

.main-bg
  background #F0F1EE

.circle_big
  border-radius 100%
  width 90px
  height 90px
  background #FFD464
  text-align center
  line-height 90px
  position relative

.circle_small
  border-radius 100%
  width 40px
  height 40px
  background #1352A2
  color #fff
  text-align center
  line-height 40px
  position absolute
  bottom 0
  right 0
