doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		title List of soical networking sites
		link(href='css/normalize.css', rel='stylesheet')
		link(href='css/main.css', rel='stylesheet')
	body
		.container
			h1 List of social networking sites
			.sort Sort networks
			.sites-list
				.sites-list__item.sites-list__row
					.sites-list__col-3
						span.icon-twitter
						h2 Twitter
						p Short description
					.sites-list__col-4
						h3 Pros
						ul
							li Be online
							li No one know
							li Brake
				.sites-list__item.sites-list__row
					.sites-list__col-3
						span.icon-facebook
						h2 Facebook
						p Short description
					.sites-list__col-3
						h3 Pros
						ul
							li No online
							li Be offline
							li on And one
				.sites-list-item.sites-list__row
					.sites-list__col-3
						span.icon-gplus
						h2 Google plus
						p Short description
					.sites-list__col-3
						h3 Pros
						ul
							li Oli koli
							li Doki
							li Boki
